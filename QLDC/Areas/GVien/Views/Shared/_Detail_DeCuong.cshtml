@using QLDC.Models;
@model QLDC.Models.DeCuong

@{
    var giangvien = ViewBag.GV as List<GiangVien>;
    var monhoc = ViewBag.MH as List<MonHoc>;
    var nhanvien = ViewBag.NV as List<VanPhongKhoa>;
}

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TenDeCuong)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TenDeCuong)
    </dd>

    <dt class="control-label col-sm-2">Giảng viên</dt>
    @if (giangvien.FirstOrDefault(x => x.MaGiangVien == Model.MaGiangVien) != null)
    {
        <dd class="col-sm-10"> @giangvien.FirstOrDefault(x => x.MaGiangVien == Model.MaGiangVien).TenGiangVien</dd>
    }
    else
    {
        <dd class="col-sm-10"></dd>
    }


    <dt class="control-label col-sm-2">Môn học</dt>
    @if (monhoc.FirstOrDefault(x => x.MaMon == Model.MaMon) != null)
    {
        <dd class="col-sm-10"> @monhoc.FirstOrDefault(x => x.MaMon == Model.MaMon).TenMon</dd>
    }
    else
    {
        <dd class="col-sm-10"></dd>
    }

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TomTat)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TomTat)
    </dd>
